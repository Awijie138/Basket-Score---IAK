<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.example.asus.latihan.MainActivity">

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="282dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"/>

    <LinearLayout

        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="20dp"
                android:text="Team A"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/score_A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="75dp"
                android:text="0"
                android:textSize="50sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="#1350a5"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="+3 POINTS"
                android:textColor="#ffffff"
                android:onClick="point3A"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="#1350a5"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="+2 POINTS"
                android:onClick="point2A"
                android:textColor="#ffffff"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"
                android:background="#1350a5"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text="FREE THROW"
                android:onClick="freethrowA"
                android:textColor="#ffffff"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="20dp"
                android:text="Team B"
                android:textColor="#000000"/>
            <TextView
                android:id="@+id/score_B"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="65dp"
                android:text="0"
                android:textSize="50sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:background="#1350a5"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="+3 POINTS"
                android:onClick="point3B"
                android:textColor="#ffffff"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:background="#1350a5"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:text="+2 POINTS"
                android:onClick="point2B"
                android:textColor="#ffffff"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="13dp"
                android:background="#1350a5"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:text="FREE THROW"
                android:onClick="freethrowB"
                android:textColor="#ffffff"/>
        </LinearLayout>



    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_above="@id/reset_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="140dp"
        android:background="#000000"/>

    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:background="#1350a5"
        android:padding="20dp"
        android:text="RESET"
        android:onClick="reset"
        android:textColor="#ffffff"
        android:textStyle="bold"/>


</RelativeLayout>
