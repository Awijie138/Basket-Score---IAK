<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    >

    <View
        android:id="@+id/line1"
        android:layout_width="1dp"
        android:layout_height="168dp"
        android:layout_centerHorizontal="true"
        android:background="#000000"/>

    <LinearLayout
        android:id="@+id/layout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team A"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:textSize="50sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:onClick="point3A"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginLeft="25dp"
                android:onClick="point2A"
                android:layout_marginBottom="5dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:paddingLeft="22dp"
                android:onClick="freethrowA"
                android:layout_marginBottom="5dp"
                android:paddingRight="22dp"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>


        <LinearLayout

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="100dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Team B"
                android:textColor="#000000"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="60dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_marginLeft="70dp"
                android:layout_marginBottom="10dp"
                android:textSize="50sp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+3 POINTS"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:onClick="point3B"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+2 POINTS"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:paddingLeft="30dp"
                android:paddingRight="30dp"
                android:onClick="point2B"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="25dp"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FREE THROW"
                android:background="#1350a5"
                android:textColor="#ffffff"
                android:paddingLeft="22dp"
                android:paddingRight="22dp"
                android:onClick="freethrowB"
                android:layout_marginLeft="25dp"/>
        </LinearLayout>



    </LinearLayout>
    <View
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="30dp"
        android:layout_toRightOf="@id/reset_button"
        android:background="#000000"/>
    <View
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_marginBottom="30dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/reset_button"
        android:background="#000000"/>
    <View
        android:layout_width="1dp"
        android:layout_height="120dp"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@id/reset_button"
        android:background="#000000"/>
    <Button
        android:id="@+id/reset_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RESET"
        android:textStyle="bold"
        android:background="#1350a5"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="30dp"
        android:onClick="reset"
        android:padding="20dp"/>


</RelativeLayout>